import 'dart:io';

class MediaModel{
  final String? id;
  final String name;
  final String author;
  final String category;
  final String status;
  final String description;
  final int maxDuration;
  final File? image;

  const MediaModel({
    this.id,
    required this.name,
    required this.author,
    required this.category,
    required this.status,
    required this.description,
    required this.maxDuration,
    this.image,
  });

  toJson(){
    return{
      'Name': name,
      'Author': author,
      'Category': category,
      'Status': status,
      'Description': description,
      'Max': maxDuration, 
      if (image != null) 'Image': image!.path
    };
  }
}